<% layout("/layouts/boilerplate") %>

<style>

    #filters{
        display: flex;
        flex-wrap: wrap ;
       justify-content: space-evenly;
    }
    .filter{
        text-align: center;
        margin-right: 1.5rem;
        opacity: .7;

    }
    .filter i{
        font-size: 1.1rem;
        color: black;
    }
    .filter p{
        font-size: .75rem;
    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .taxInfo{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        height: 3rem;
        padding: 1rem;
        border-radius: 1rem ;
        display: flex;
        align-items: center;
        opacity: .7;
    }
    .tax-toggle:hover{
        opacity: 1;
    }
    
    .toggle label{
        font-size: .75rem;
    }

</style>

<div id="filters" class="mt-3">

    
    <div class="filter">
        <div><i class="fa-solid fa-water-ladder"></i></div>
        <p>Amazing pools</p>
    </div>
     <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach front</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-spa"></i></div>
        <p>Earth home</p>
    </div>
    <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lake</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Top of the world</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-house"></i></div>
        <p>Rooms</p>
    </div>
    
    <div class="  tax-toggle">
        <div class="toggle form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Price after adding taxes</label>
        </div>    
    </div>

        <br>
        <!-- <h2>All Listings</h2> -->
        <!-- <form method="get" action="/listings/new">
        <button>Create New</button>
    </form> -->

    </div>

        <div class="row row-5 row-cols-lg-4 row-cols-md-3 mt-3 row-cols-sm-1">
            <% for(let listing of allListing){ %>
                <a href="/listings/<%= listing._id %>" class="listing-class">
                    <div class="card listing-card col">
                        <img src='<%= listing.image.url%>' class="card-img-top" style="height:20rem;"
                            alt="listing_image">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text"><b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                &#8377; <%= listing.price?.toLocaleString("en-IN") %> / night
                                &nbsp;&nbsp;&nbsp; <i class="taxInfo"> 18% gst</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>

        </div>

<script>
    let taxSwitch=document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("taxInfo");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display="inline";
            }else{
                info.style.display="none";
            }
        }
    })
</script>        
    